
<table>
  <tr>
  <% counter = 1 %>
  <% @products.each do |product| %>
  <td>
    <%if product.image.present?%>
      <!--< link_to '<%=image_tag product.image%>', product_path(product) %>-->
    <p><%= image_tag product.image %></p>
    <%else%>
      <p><img src="/assets/image_not_found.jpg" alt="Keep Calm Inc."/></p>
    <%end%>
    <p><%= link_to product.description, product_path(product) %></p>
    <p>$<%= product.price %></p>
    <h4>Add to Cart</h4>
    </td>
  <%counter += 1%>
  <% if(counter == 4)%>
    <%counter = 1%>
    </tr>
    <tr>
  <%end%>
<% end %>
</table>
<br />

