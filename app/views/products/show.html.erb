<div id="show">
  <%if @product.image.present?%>
    <!--< link_to '<image_tag product.image%>', product_path(product) %>-->
    <p><%= image_tag @product.image %></p>
  <%else%>
    <p><img src="/assets/image_not_found.jpg" alt="Keep Calm Inc."/></p>
  <%end%>
  <p>
    <b>Product name:</b>
    <%= @product.product_name %>
  </p>
  <p>
    <b>Description:</b>
    <%= @product.description %>
  </p>
  <p>
    <b>Price:</b>
    <%= @product.price %>
  </p>
  <p>
    <b>Category:</b>
    <%= @product.category %>
  </p>
  <h4>Add to Cart</h4>
  <p>
    <br/><%= link_to 'Back', products_path %>
  </p>
</div>