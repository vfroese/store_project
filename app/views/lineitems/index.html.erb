<h1>Listing lineitems</h1>

<table>
  <tr>
    <th>Product</th>
    <th>Order</th>
    <th>Quantity</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @lineitems.each do |lineitem| %>
  <tr>
    <td><%= lineitem.product_id %></td>
    <td><%= lineitem.order_id %></td>
    <td><%= lineitem.quantity %></td>
    <td><%= lineitem.price %></td>
    <td><%= link_to 'Show', lineitem %></td>
    <td><%= link_to 'Edit', edit_lineitem_path(lineitem) %></td>
    <td><%= link_to 'Destroy', lineitem, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

